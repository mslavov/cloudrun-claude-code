# Google Cloud Configuration
PROJECT_ID=your-project-id
REGION=us-central1

# Service Configuration
SERVICE_NAME=qa-agent
REPOSITORY=claude-code
IMAGE_NAME=claude-code
TAG=latest

# Resource Configuration
CPU=2
MEMORY=4Gi
TIMEOUT=3600  # Maximum 60 minutes (3600 seconds) for long-running Claude tasks
CONCURRENCY=3  # Lower concurrency = more resources per request (1.3GB RAM, 0.66 CPU each)
MIN_INSTANCES=0
MAX_INSTANCES=10

# Network Configuration (optional)
ENABLE_VPC=false
VPC_NETWORK=default
VPC_SUBNET=serverless-subnet
SUBNET_RANGE=10.0.0.0/28

# Claude Code Configuration
ALLOWED_TOOLS=Read,Write,Grep,Bash(npm run test:*),WebSearch
PERMISSION_MODE=acceptEdits

# API Keys and Tokens
# IMPORTANT: Never commit actual keys to git
# Option 1: API Key (for API usage)
# ANTHROPIC_API_KEY=sk-ant-...
# Option 2: OAuth Token (for Claude subscription users)
# CLAUDE_CODE_OAUTH_TOKEN=your-oauth-token-here
